<div class="border-form-div">
<h2>Entra!</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.email_field :email, required: false, autofocus: true %>
    <%= f.password_field :password, required: false %>
    <%= f.input :remember_me, as: :boolean, label:"Ricordami"  if devise_mapping.rememberable? %>
  </div>
<div>
  <p><mark>Non hai un account?</mark> <%= link_to 'Crealo ora', new_user_registration_path, class: "nounderline"%> </p>
</div>
  <div class="form-actions">
    <%= f.button :submit, "Entra" %>
  </div>
<% end %>

</div>
